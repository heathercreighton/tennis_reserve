
<div class="jumbotron" style="text-align: center;">
<div class="well">
	<div class="col-lg-8">
<h2> Welcome to the Bentley Park Tennis Courts </h2>
  </div>
  <div class="col-lg-4">
<p><%= image_tag "bp_front.jpg", alt: "Bentley Park Front" , width: "250" %></p>
</div>
<div style="text-align: center;" >
<p>See a list of our events below </p>
</div>
</div>
</div>

<!-- remove nil entries -->

<% @meetings.each do |m| %>
    <% if m.start_time == nil %>
      <%  m.delete  %>
    <% end %>
<% end %>
<!-- end of removal -->

<%= month_calendar events: @meetings do |date, meetings| %>
  <%= date.strftime("%d") %>

  <% meetings.each do |meeting| %>
    <div>
      <strong><%= meeting.name %></strong><br/>
      <%= meeting.start_time.strftime("%I:%M%p") %> - <br/>
      <%= meeting.end_time.strftime("%I:%M%p") %><br/>
      Created by: <%= meeting.username %>
    </div>
  <% end %>
<% end %>


